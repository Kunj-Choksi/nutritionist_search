<div class="row">
<div class="jumbtrone">
    <div class="col-lg-12">
        <h2 class="page-header mb20">City</h2>
    </div>

    <%= link_to('Add New City', {:action => 'new'}, :class => 'btn btn-primary mb20') %>
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Nutritionist</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        <% @cities.each do |c| %>
            <tr>
                <td> <%= c.id  %>  </td>
                <td><%= c.name %></td>
                <td>
                  <% c.nutritionists.each do |n| %>
                      <%= n.name %><br/>
                  <% end %>
                </td>
                <td><%= c.status_id %></td>
                <td>
                    <%= link_to("Edit", { :action => 'edit', :id => c.id }, :class => 'btn btn-primary') %>
                    <%= link_to("Delete", { :action => 'delete', :id => c.id }, :class => 'btn btn-danger') %>
                </td>
            </tr>
        <% end %>
    </table>
</div>
</div>