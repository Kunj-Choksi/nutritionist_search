<h2>Add City</h2>
<div class="row">
  <div class="col-md-6">
    <div class="new-city-container form-horizontal">
      <%= form_for(:master_cities, :url => {:action => 'create'}) do |f|%>

          <%= render(:partial => "form", :locals => {:f => f})%>

          <fieldset>
            <div class="form-group">
              <label class="col-sm-3 control-label">&nbsp;</label>
              <div class="col-sm-8">
                <%= submit_tag("Create City", :class => 'btn btn-primary') %>
              </div>
            </div>
          </fieldset>
      <% end %>
    </div>
  </div>
</div>