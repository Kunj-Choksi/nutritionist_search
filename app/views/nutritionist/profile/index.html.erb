<div class="row">
<div class="col-lg-12">
<h2 class="page-header mb20">Nutritionist</h2>
</div>

<%= link_to("Add Nutritionist", {:action => 'new'}, :class => 'btn btn-primary mb20') %>
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Specialities</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
        <% @nutritionists.each do |n| %>
            <tr>
                <td>
                    <%= n.name %>
                </td>
                <td>
                    <% n.specialities.each do |s| %>
                        <%= s.name %><br/>
                    <% end %>
                </td>
                <td>
                    <%= (n.city.present?) ? n.city.name : '' %>
                </td>
                <td>
                    <%= link_to("Edit", {:action => 'edit', :id => n.id},  :class => 'btn btn-primary') %>
                    <%= link_to("Delete", {:action => 'delete', :id => n.id},  :class => 'btn btn-danger' ) %>
                </td>
            </tr>
        <% end %>
    </table>
</div>