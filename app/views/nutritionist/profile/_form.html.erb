<table class="mb20">
    <tr>
        <th><%= f.label(:name, "Name", :style => 'margin: 0px 20px 20px 0px;')%></th>
        <td><%= f.text_field(:name, class: "form-control", :value => @nutritionist.name ,:style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:mobile_no, "Mobile Number", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:mobile_no, class: "form-control", :value => @nutritionist.mobile_no, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:email, "Email", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:email, class: "form-control", :value => @nutritionist.email, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:counsultation_fees, "Counsultation Fees", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:counsultation_fees, class: "form-control",:value => @nutritionist.counsultation_fees, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:experience, "Experience", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:experience, class: "form-control",:value => @nutritionist.experience, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:work_history, "Work History", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:work_history, class: "form-control",:value => @nutritionist.work_history, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:gender_id, "Gender", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:gender_id, class: "form-control",:value => @nutritionist.gender_id, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:dob, "DOB", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:dob, class: "form-control", :value => @nutritionist.dob, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:about, "About", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:about, class: "form-control", :value => @nutritionist.about,:style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:awards, "Awards", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:awards, class: "form-control", :value => @nutritionist.awards, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
    <tr>
        <th><%= f.label(:ntuitive_user_id, "Ntutive User", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.text_field(:ntuitive_user_id, class: "form-control", :value => @nutritionist.ntuitive_user_id, :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>

    <tr>
        <th>
          <label style="margin: 0px 20px 20px 0px;" for="nutritionist_profiles_work_history">Specialities</label>
        </th>
        <td>
            <% ids = @nutritionist.specialities.pluck(:speciality_id) %>
            <select class="form-control" multiple name="nutritionist_profiles[specialities][]" id="nutritionist_profiles[specialities][]">
                <% @masterSpecialities.each do |s| %>
                  <option value="<%= s.id %>" <%= (ids.include?(s.id) ? 'selected':'' )%> ><%= s.name %></option>
                <% end %>
            </select>
        </td>
    </tr>

    <tr>
        <th><%= f.label(:city_id, "City", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td>
          <%= f.select :city_id, options_for_select(@masterCities.map { |city| [city.name, city.id] }, @nutritionist.city_id),{},{:class => "form-control"} %>

        </td>
    </tr>
    <tr>
        <th><%= f.label(:avatar, "Ntutive User", :style => 'margin: 0px 20px 20px 0px;') %></th>
        <td><%= f.file_field(:avatar, class: "form-control", :style => 'margin: 0px 20px 20px 0px;') %></td>
    </tr>
</table>